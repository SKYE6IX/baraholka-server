{
    "compilerOptions": {
        "target": "ES2016",
        "module": "ESNext",
        "moduleResolution": "Node",
        "allowJs": true,
        "checkJs": true,
        "outDir": "dist/",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}
